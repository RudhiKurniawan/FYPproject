@model Company

<form asp-controller="Account"
      asp-action="RegisterCompany"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-4">
            <h2>Register Your Company</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyName">Company Name: </label>
        <div class="col-sm-4">
            <input type="text" asp-for="CompanyName" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

</form>