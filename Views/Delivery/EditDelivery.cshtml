@model Delivery;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('#JSReleaseDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD',
                });
        });
    </script>
}

<form asp-controller="Delivery"
      asp-action="EditDelivery"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-0 col-sm-6 ">
            <h2>Edit Delivery</h2>
        </div>
    </div>

    <input asp-for="DeliveryId" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Details">Details :</label>
        <div class="col-sm-5">
            <input asp-for="Details" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CountryFrom">From :</label>
        <div class="col-sm-5">
            <input asp-for="CountryFrom" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="CountryFrom" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CountryTo">To :</label>
        <div class="col-sm-5">
            <input asp-for="CountryTo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="CountryTo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Distance">Distance :</label>
        <div class="col-sm-2">
            <input asp-for="Distance" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Distance" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="WeightPackage">Weight :</label>
        <div class="col-sm-2">
            <input asp-for="WeightPackage" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="WeightPackage" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Speed">Speed (km/h):</label>
        <div class="col-sm-2">
            <input asp-for="Speed" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Speed" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="VehicleId">Vehicle Type :</label>
        <div class="col-sm-3">
            <select class="form-control dropdown" asp-for="VehicleId"
                    asp-items="@ViewData["Vehicles"] as SelectList">
                <option value="">Please Select Vehicle Type</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CarbonEmi">Carbon Emission :</label>
        <div class="col-sm-2">
            <input asp-for="CarbonEmi" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="CarbonEmi" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>

